<div class="container">
    <div class="row">
        <div class="">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <span class="glyphicon glyphicon-list"></span> Friends added by <%= current_user.name %>
                    
                </div>
                <div class="panel-body">
                 <% @user.friendships.each do |friendship| %>
                    <ul class="list-group">
                        <li class="list-group-item">
                            <div class="checkbox">
                                <input type="checkbox" id="checkbox" />
                                <label for="checkbox">
                                    <%= friendship.friend.name %>
                                </label>
                            </div>
                            <div class="pull-right action-buttons">
                               
                                <a href="<%= removefriend_path(id: friendship.friend.id) %>"  data-method="delete" class="trash"><span class="glyphicon glyphicon-trash"></span></a>
                            
                            </div>
                        </li>
                        
                    </ul>
                    <% end %>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>
                                Total Count <span class="label label-info"><%= current_user.friends.count%></span></h6>
                        </div>
                        <div class="col-md-6">
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

