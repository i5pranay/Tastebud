

<fieldset>
  <%= form_tag(list_all_recipe_path, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search Recipes" %>
      <%= submit_tag "Search", :name => nil %>
  <% end %>
</fieldset>
<br>
<br>
<br>
<% if @all_recipe.blank? %>
    <h4>There are no recipes containing the term <%= params[:search] %>.</h4>
<% end %>
  <% @all_recipe.each do |rec|%>

      <div class="col-md-3" id="div_<%= rec.id.to_s %>">
        <div class="recipe_box" >
          <div class ="image_wrapper">
            <a href=  " <%= show_recipe_path(:recipe_id => rec.id.to_s) %>" class="img">
              <%= image_tag rec.recipe_img.url(:recipe_show), class: "recipe_index_dimension" %> </a>
            <h3> <a href= "<%= show_recipe_path(:recipe_id => rec.id.to_s) %>" ><%= rec.recipe_name %> </a></h3>
          </div>
        </div>
      </div>
  <% end %>

</fieldset>