<%= form_tag "/create_category",  class: "form-horizontal" do -%>
    <fieldset>

      <!-- Form Name -->
      <legend>category</legend>
      <!-- Text input-->
      <div class="form-group">
        <label class="col-md-4 control-label" for="category">Create Category</label>
        <div class="col-md-4">
          <input id="category" name=category[category_type] placeholder="category" class="form-control input-md" required="" type="text">

        </div>
      </div>

      <!-- Button -->
      <div class="form-group">
        <div class="col-md-4">
          <button id="submit" name="submit" class="btn btn-primary">submit</button>
        </div>
      </div>

    </fieldset>
    <br>

    <fieldset>

      <table>
        <thead>
        <tr>
          <th>Category</th>
          <th> Edit</th>
          <th> Remove </th>
        </tr>
        </thead>
        <tbody>
        <% @all_category.each do |cat|%>
        <tr id="row_<%= cat.id.to_s %>">
          <td> <%= cat.category_type %> </td>
          <td> <a href="/edit_category?category_id=<%= cat.id.to_s%>">Edit</a></td>
          <td><a href="/delete_category?category_id=<%= cat.id.to_s%>" data-remote="true" data-method="delete">Remove</a></td>
        </tr>
            <% end %>
            </tbody>
      </table>
    </fieldset>
    </br>

    <style>
      table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
      }

      td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
      }

      tr:nth-child(even) {
        background-color: #dddddd;
      }
    </style>

<% end -%>

